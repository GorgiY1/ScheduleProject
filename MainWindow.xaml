                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To=".2" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="Blackout"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="TodayBackground" Fill="#FF0017FF" TextElement.Foreground="Red" Opacity="0" RadiusY="20" RadiusX="20"/>
                            <Rectangle x:Name="SelectedBackground" Fill="BlueViolet" Opacity="0" RadiusY="20" RadiusX="20"/>
