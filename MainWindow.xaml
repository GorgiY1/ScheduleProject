                                            </Grid>
                                        </ControlTemplate>
                                    </Grid.Resources>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="79"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Button x:Name="PART_HeaderButton" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" Focusable="False" FontSize="18" Margin="0,5,0,0" HorizontalAlignment="Center" Grid.Row="0" Template="{StaticResource HeaderButtonTemplate}" VerticalAlignment="Center"/>

                                    <StackPanel x:Name="stackButtons" Grid.Column="2" 
                                                Grid.Row="0"
                                                Margin="5,0,5,0"
                                                Orientation="Horizontal"
                                                Width="70">
                                        <Button x:Name="PART_PreviousButton" Focusable="False" 
                                                Height="25"
                                                Width="25"
                                                Template="{StaticResource PreviousButtonTemplate}"/>

                                        <Button x:Name="PART_NextButton" Focusable="False" 
                                                Height="25"
                                                Width="25"
                                                Template="{StaticResource NextButtonTemplate}"
                                                Margin="6,6,6,6"/>
                                    </StackPanel>

                                    <Grid x:Name="PART_MonthView" Grid.ColumnSpan="3" HorizontalAlignment="Center"   Margin="13,13,13,13" Grid.Row="0" Visibility="Visible" Grid.RowSpan="3">
